<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/progress"
        android:top="16dp"
        android:bottom="16dp">
        <layer-list>

            <item>

                    <shape android:shape="oval">
                        <size
                            android:width="100dp"
                            android:height="100dp" />
                        <stroke
                            android:width="6dp"
                            android:color="#FF8D00" />
                    </shape>
            </item>
            <item android:left="10dp"
                android:gravity="center|center_horizontal"
                android:top="10dp"
                android:bottom="10dp"
                android:right="10dp"
                android:height="30dp"
                android:width="30dp">
                <rotate
                    android:pivotX="50%"
                    android:pivotY="50%"
                    android:toDegrees="2160">
                <bitmap android:src="@drawable/ic_hourglass" ></bitmap>
                </rotate>
            </item>
        </layer-list>
    </item>
</layer-list>