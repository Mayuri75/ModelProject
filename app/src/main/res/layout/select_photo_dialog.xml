<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <TextView
        android:id="@+id/tvDialogTitle"
        android:layout_width="match_parent"
        android:text="Add photo"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvDialogContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:text="Take a photo"
        android:layout_below="@+id/tvDialogTitle"/>

    <TextView
        android:id="@+id/tvDialogContent1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:textColor="#000000"
        android:visibility="visible"
        android:textSize="18sp"
        android:text="Gallery"
        android:layout_below="@+id/tvDialogContent"/>

    <TextView
        android:id="@+id/tvDialogCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="18sp"
        android:text="Cancel"
        android:textColor="#000000"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/tvDialogContent1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp" />

</RelativeLayout>
